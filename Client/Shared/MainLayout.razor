@inherits LayoutComponentBase
@inject IRaceSvc svc
@inject IJSRuntime jsRuntime

<div class="h-100 d-flex flex-column">
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<div class="container">
			<a class="navbar-brand" href="/">ВелоКурск</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
					aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse mr-auto" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item active">
						<NavLink class="nav-link" href="/races">Гонки</NavLink>
					</li>
					<li class="nav-item active">
						<NavLink class="nav-link" href="/numbers">Номера</NavLink>
					</li>
				</ul>
				@if (Race != null)
				{
					<ul class="navbar-nav">
						<NavLink class="btn btn-success" href="/run">
							@Race.Racename @Race.StartName
						</NavLink>
						<li class="btn btn-secondary" @onclick="@Deactivate">Остановить</li>
					</ul>
				}
			</div>
		</div>
	</nav>

	@Body
</div>

@code {
	Proto.RaceInfo? Race;

	protected override void OnInitialized()
	{
		svc.GetRaceInfoSubject().Subscribe(r => { Race = r; StateHasChanged(); });
	}

	private async Task Deactivate()
	{
		if (await jsRuntime.InvokeAsync<bool>("confirm", "Остановить текущий заезд?"))
		{
			await svc.DeactivateStart();
		}
	}
}
